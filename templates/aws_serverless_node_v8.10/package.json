{
  "name": "serverless_template",
  "jest": {
    "verbose": true,
    "testEnvironment": "node"
  },
  "scripts": {
    "test": "sls dotenv && jest --watch",
    "start": "ENV=${ENV:-development}; ENV=$ENV sls offline start",
    "deploy": "ENV=${ENV:-staging}; ENV=$ENV sls deploy",
    "deploy:prod": "ENV=${ENV:-production}; ENV=$ENV sls deploy",
    "delete": "ENV=${ENV:-staging}; ENV=$ENV sls remove"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-plugin-source-map-support": "1.0.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-3": "6.24.1",
    "git-revision-webpack-plugin": "3.0.3",
    "jest": "23.6.0",
    "raven": "2.6.4",
    "@sentry/webpack-plugin": "1.6.1",
    "serverless-domain-manager": "2.6.0",
    "serverless-sentry": "1.2.0",
    "serverless": "1.30.3",
    "serverless-offline": "3.25.8",
    "serverless-webpack": "5.2.0",
    "webpack": "4.16.5",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "@jimdo/serverless-dotenv": "1.0.0",
    "aws-sdk": "2.296.0",
    "dotenv": "6.1.0",
    "moment": "2.22.2",
    "serverless-sentry-lib": "1.1.2"
  }
}
